<p id="notice"><%= notice %></p>

<aside class="col-md-3">
  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Choose a category
    <span class="caret"></span>
    </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li><%= link_to "All categories", categories_path %></li>
    <li role="separator" class="divider"></li>
    <% @categories.each do |category| %>
      <li><%= link_to "#{category.title}", category_slug_path(category.slug) %></li>
    <% end %>
  </ul>
</div>
</aside>

<section class="col-md-9">
<% unless @search_phrase.nil? %>
  <div class="">
    <h2> Search results for "<%= @search_phrase %> "</h2>
    <% unless @resources_searched.any? %>
      <h2> : unfortunately your search did not match any courses.</h2>
    <% end %>
   </div>

   <% if @resources_searched.any? %>
     <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @resources_searched.each do |resource| %>
          <tr>
            <td><%= resource.title %></td>
            <td><%= resource.description %></td>
            <td><%= link_to 'Show', resource %></td>
            <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
            <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>

<% end %>

<% unless (@resources.nil?) %>
  <h1>Listing Resources</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @resources.each do |resource| %>
        <tr>
          <td><%= resource.title %></td>
          <td><%= resource.description %></td>
          <td><%= link_to 'Show', resource %></td>
          <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
          <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
</section>

<br>

<%= link_to 'New Resource', new_resource_path %>
